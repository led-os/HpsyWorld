<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.kuwai.ysy.widget.NavigationLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightImg="@drawable/ic_nav_search_default"
        app:title1="寻找好友"></com.kuwai.ysy.widget.NavigationLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lay_phone_book"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/btn_header_book"
            android:gravity="center"
            android:text="通讯录好友" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/btn_header_wechat"
            android:gravity="center"
            android:text="微信好友" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/btn_header_qq"
            android:gravity="center"
            android:text="QQ好友" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:background="@color/bg_color_f4" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl_9"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:tl_indicator_color="#996732f8"
        app:tl_textSelectColor="@color/white"
        app:tl_textUnselectColor="@color/balck_28"
        app:tl_indicator_corner_radius="25dp"
        app:tl_indicator_margin_left="2dp"
        app:tl_indicator_margin_right="2dp"
        app:tl_indicator_style="BLOCK"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>