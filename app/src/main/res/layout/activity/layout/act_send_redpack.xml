<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kuwai.ysy.widget.NavigationLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftTxt="取消"
        app:rightImg="@drawable/chat_re_ic_more"
        app:title1="发红包"></com.kuwai.ysy.widget.NavigationLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/sp_r16_f0f2f5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="金额"
            android:textColor="#ff282838"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_red_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="0.00"
            android:inputType="number|numberDecimal"
            android:textColor="#ff7b7b7b"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:text="桃花币"
            android:textColor="#ff282838"
            android:textSize="14sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_red_content"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/top"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/sp_r16_f0f2f5"
        android:gravity="left|top"
        android:hint="恭喜发财，大吉大利"
        android:maxLength="20"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:textColor="#808080"
        android:textColorHint="#929292"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:text="¥"
            android:textColor="#ff282838"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.kuwai.ysy.widget.CustomFontTextview
            android:id="@+id/tv_red_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="#ff282838"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.allen.library.SuperButton
        android:id="@+id/btn_send_red"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="40dp"
        android:text="塞钱进红包"
        android:textColor="@color/white"
        app:sCornersRadius="4dp"
        app:sSolidColor="#4df74e31" />

</LinearLayout>