<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.kuwai.ysy.widget.NavigationLayout
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rightColor="@color/theme"
            app:rightTxt="学历作用？"
            app:title1="学历认证" />

        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@drawable/center_aut_img_banner_1" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0d4E05FF"
            android:padding="4dp"
            android:paddingStart="16dp"
            android:text="请拍摄并上传你的最高学历证书"
            android:textColor="#ff5415f9"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="21dp"
            android:paddingTop="13dp"
            android:paddingEnd="21dp"
            android:paddingBottom="13dp">

            <RelativeLayout
                android:id="@+id/rl_edu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_edu"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/center_aut_add" />

                <TextView
                    android:id="@+id/tv_edu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="58dp"
                    android:text="上传学历证书正面照"
                    android:textColor="@color/baoyin"
                    android:textSize="12sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/center_aut2_img" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0d4E05FF"
            android:padding="4dp"
            android:paddingStart="16dp"
            android:text="以上信息仅供此次认证使用，将严格保密"
            android:textColor="#ff5415f9"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/my_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:hint="输入你的真实姓名"
            android:padding="16dp"
            android:textColorHint="@color/baoyin"
            android:textSize="16sp" />

        <View style="@style/horizontal_line" />

        <com.allen.library.SuperTextView
            android:id="@+id/my_edu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            app:sLeftTextColor="@color/baoyin"
            app:sLeftTextSize="16sp"
            app:sRightTvDrawableRight="@drawable/center_ic_list_arrow"
            app:sLeftTextString="选择你的最高学历" />

        <EditText
            android:id="@+id/my_school"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:hint="输入毕业院校的完整名称"
            android:padding="16dp"
            android:textColorHint="@color/baoyin"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_cash"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/money_cash_btn"
            android:text="完成提交"
            android:textColor="#ffffffff"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>