<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_r16_f0f2f5"
    android:padding="16dp">

    <ImageView
        android:id="@+id/top_del"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/rc_cs_close" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="请输入支付密码"
        android:textColor="#ff282838"
        android:textSize="18sp" />

    <View
        android:id="@+id/line"
        style="@style/horizontal_line"
        android:layout_below="@id/title"
        android:layout_marginTop="12dp" />

    <LinearLayout
        android:id="@+id/cost_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-500"
            android:textColor="#ff6161"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桃花币" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        style="@style/horizontal_line"
        android:layout_below="@id/cost_lay"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginTop="10dp"
        android:text="红包" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/line1"
        android:layout_marginTop="10dp"
        android:text="账户支付" />

    <View
        android:id="@+id/line2"
        style="@style/horizontal_line"
        android:layout_below="@id/tv_info"
        android:layout_marginTop="10dp" />

    <com.kuwai.ysy.widget.PasswordInputView
        android:id="@+id/psd_red"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/line2"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        app:borderWidth="1dp"
        app:passwordColor="@color/black"
        app:passwordLength="6"
        app:passwordWidth="6dp" />
</RelativeLayout>