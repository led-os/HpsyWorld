<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_elevation_radius"
    android:orientation="vertical">

    <com.kuwai.ysy.widget.NiceImageView
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/bg_start"
        app:corner_top_left_radius="6dp"
        app:corner_top_right_radius="6dp"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王凯"
            android:textColor="#ff666666"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海浦东 95km"
            android:layout_toRightOf="@id/tv_name"
            android:drawableLeft="@drawable/home_icon_position"
            android:layout_alignBottom="@id/tv_name"
            android:layout_marginLeft="14dp"
            android:textColor="#ff505050"
            android:textSize="9sp"
            />
    </RelativeLayout>

    <View style="@style/horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="取 消"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffbfbfbf"
            android:padding="12dp"
            android:textSize="12sp"
            />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_color"/>
        <TextView
            android:id="@+id/tv_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="请求视频"
            android:padding="12dp"
            android:gravity="center"
            android:textColor="#ff52bbff"
            android:textSize="12sp"
            />

    </LinearLayout>

</LinearLayout>