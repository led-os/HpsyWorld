<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/parent_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="48dp"></android.support.v7.widget.RecyclerView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <com.allen.library.SuperButton
            android:id="@+id/btn_chong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:sSolidColor="@color/bg_color_f4"
            app:sStrokeColor="@color/line_color"
            app:sStrokeWidth="1dp"
            android:layout_weight="1"
            android:text="重置"/>

        <com.allen.library.SuperButton
            android:id="@+id/btnSure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:sSolidColor="#b35415f9"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="确定"/>
    </LinearLayout>
</RelativeLayout>