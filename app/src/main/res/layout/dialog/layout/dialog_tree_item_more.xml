<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sp_r16_f0f2f5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_report"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/dyn_tree_ic_report"
        android:drawablePadding="8dp"
        android:paddingLeft="12dp"
        android:text="举报"
        android:textColor="@color/balck_28"
        android:textSize="16sp" />

    <View style="@style/horizontal_line" />

    <TextView
        android:id="@+id/tv_ping"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/dyn_tree_ic_shield"
        android:drawablePadding="8dp"
        android:paddingLeft="12dp"
        android:text="屏蔽"
        android:textColor="@color/balck_28"
        android:textSize="16sp" />

    <View
        android:id="@+id/line2"
        style="@style/horizontal_line" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/dyn_tree_ic_del"
        android:drawablePadding="8dp"
        android:paddingLeft="12dp"
        android:text="删除"
        android:textColor="@color/balck_28"
        android:textSize="16sp" />

</LinearLayout>