<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/dialog_comment_et"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_margin="12dp"
        android:background="@drawable/comment_dialog_et_selector"
        android:gravity="left|top"
        android:hint="请输入评论内容..."
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:textColor="#808080"
        android:textColorHint="#929292"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.allen.library.SuperButton
            android:id="@+id/dialog_comment_bt"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/top"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:sCornersRadius="18dp"
            android:layout_marginBottom="20dp"
            app:sGradientEndColor="#bfb5ea"
            app:sGradientOrientation="LEFT_RIGHT"
            app:sGradientStartColor="#9a7df7"
            app:sGradientType="linear" />
    </RelativeLayout>

</LinearLayout>