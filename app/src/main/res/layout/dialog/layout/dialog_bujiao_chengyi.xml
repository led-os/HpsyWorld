<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_no_bottom"
    android:padding="16dp">

    <ImageView
        android:id="@+id/top_del"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/rc_cs_close" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="补充诚意金"
        android:textColor="#ff282838"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_tips_why" />

    <View
        android:id="@+id/line"
        style="@style/horizontal_line"
        android:layout_below="@id/title"
        android:layout_marginTop="12dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_cheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"></android.support.v7.widget.RecyclerView>

    <com.allen.library.SuperButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_cheng"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:sCornersRadius="4dp"
        app:sGradientEndColor="#bfb5ea"
        app:sGradientOrientation="LEFT_RIGHT"
        app:sGradientStartColor="#9a7df7"
        app:sGradientType="linear" />
</RelativeLayout>