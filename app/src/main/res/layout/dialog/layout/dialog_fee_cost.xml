<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_no_bottom"
    android:padding="16dp">

    <ImageView
        android:id="@+id/top_del"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/rc_cs_close" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="支付诚意金"
        android:textColor="#ff282838"
        android:textSize="18sp" />

    <View
        android:id="@+id/line"
        style="@style/horizontal_line"
        android:layout_below="@id/title"
        android:layout_marginTop="12dp" />

    <LinearLayout
        android:id="@+id/cost_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-500"
            android:textColor="#ff6161"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桃花币" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        style="@style/horizontal_line"
        android:layout_below="@id/cost_lay"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginTop="10dp"
        android:text="约会诚意金" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/line1"
        android:layout_marginTop="10dp"
        android:text="账户支付" />

    <View
        android:id="@+id/line2"
        style="@style/horizontal_line"
        android:layout_below="@id/tv_info"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/line2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <com.allen.library.SuperButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/grey_bd"
            android:textSize="14sp"
            app:sCornersRadius="4dp"
            app:sSolidColor="@color/white"
            app:sStrokeColor="@color/grey_bd"
            app:sStrokeWidth="1px" />

        <com.allen.library.SuperButton
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:sCornersRadius="4dp"
            app:sGradientEndColor="#bfb5ea"
            app:sGradientOrientation="LEFT_RIGHT"
            app:sGradientStartColor="#9a7df7"
            app:sGradientType="linear" />
    </LinearLayout>
</RelativeLayout>