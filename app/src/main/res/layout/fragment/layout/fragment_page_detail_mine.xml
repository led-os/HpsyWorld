<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_list_tab"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="交友宣言"
                android:textColor="@color/balck_28"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:text="修改宣言"
                android:textColor="@color/grey_bd"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="我来自苏州，希望能够在这里遇到属于我的另一半共度余生，余生请多关照"
            android:textColor="@color/balck_28"
            android:textSize="14sp" />

        <View style="@style/horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_list_tab"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="已认证"
                android:textColor="@color/balck_28"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:text="继续认证"
                android:textColor="@color/grey_bd"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/center_center_card"
                android:text="实名认证"
                android:textColor="@color/grey_bd"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/center_center_house"
                android:text="房产认证"
                android:textColor="@color/grey_bd"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/center_center_book"
                android:text="学历认证"
                android:textColor="@color/grey_bd"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/center_center_car"
                android:text="车辆认证"
                android:textColor="@color/grey_bd"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_list_tab"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="基本资料(3/8)"
                android:textColor="@color/balck_28"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_info_edit"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:text="编辑个人资料"
                android:textColor="@color/grey_bd"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:text="ID"
                android:textColor="#cc282828"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="125063465"
                android:textColor="#cc282828"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:text="年龄"
                android:textColor="#cc282828"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="12"
                android:textColor="#cc282828"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:text="身高"
                android:textColor="#cc282828"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="170cm"
                android:textColor="#cc282828"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_list_tab"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="高级资料(0/8)"
                android:textColor="@color/balck_28"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:text="立即完善高级资料"
                android:textColor="@color/grey_bd"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_list_tab"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="择偶标准"
                android:textColor="@color/balck_28"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:text="选择择偶标准"
                android:textColor="@color/grey_bd"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_list_tab"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="足迹地点"
                android:textColor="@color/balck_28"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:text="管理地点"
                android:textColor="@color/grey_bd"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />
    </LinearLayout>
</ScrollView>