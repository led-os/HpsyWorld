<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/center_img_xxx_default" />

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="#99ffffff" />

        <RelativeLayout
            android:id="@+id/user_headicon_default"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="18dp"
            android:gravity="center_horizontal">

            <com.allen.library.CircleImageView
                android:id="@+id/img_head"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/center_img_user_default" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/center_ic_head_default"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="2dp"
                android:rotation="-6"
                android:textColor="@color/theme"
                android:textSize="10sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/user_headicon_default"
            android:singleLine="true"
            android:text="ID:0000000"
            android:textColor="#ffbdbdbd"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_id"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="17dp"
            android:layout_toRightOf="@+id/user_headicon_default"
            android:text="未登录"
            android:textColor="#282828"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_vip"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_above="@id/tv_id"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@+id/tv_text"
            android:src="@drawable/center_ic_vip_default" />

        <TextView
            android:id="@+id/lay_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="14dp"
            android:drawableRight="@drawable/ic_arrow_right"
            android:gravity="center_vertical"
            android:text="登录后查看主页"
            android:textColor="#ff7b7b7b"
            android:textSize="14sp" />

    </RelativeLayout>

</merge>
