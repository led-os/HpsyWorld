<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kuwai.ysy.widget.NavigationLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightTxt="保存"
        app:rightColor="@color/theme"
        app:title1="修改密码"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="当前密码"
            android:textColor="@color/balck_28"
            android:textSize="16sp" />

        <com.kuwai.ysy.widget.PasswordInputView
            android:id="@+id/current_psd"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@null"
            android:cursorVisible="false"
            android:inputType="number"
            android:maxLength="6"
            app:borderWidth="2dp"
            app:passwordColor="@color/black"
            app:passwordLength="6"
            app:passwordWidth="6dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="新密码"
            android:textColor="@color/balck_28"
            android:textSize="16sp" />

        <com.kuwai.ysy.widget.PasswordInputView
            android:id="@+id/new_psd"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@null"
            android:cursorVisible="false"
            android:inputType="number"
            android:maxLength="6"
            app:borderWidth="2dp"
            app:passwordColor="@color/black"
            app:passwordLength="6"
            app:passwordWidth="6dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认新密码"
            android:textColor="@color/balck_28"
            android:textSize="16sp" />

        <com.kuwai.ysy.widget.PasswordInputView
            android:id="@+id/sure_new_psd"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@null"
            android:cursorVisible="false"
            android:inputType="number"
            android:maxLength="6"
            app:borderWidth="2dp"
            app:passwordColor="@color/black"
            app:passwordLength="6"
            app:passwordWidth="6dp" />

    </LinearLayout>

</LinearLayout>
