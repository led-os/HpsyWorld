<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="礼物详情"
        android:textColor="#ff282828"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="22dp"
        android:background="#eeeeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">

        <com.allen.library.CircleImageView
            android:id="@+id/iv_headicon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/iv_headicon"
            android:text="风停停走走"
            android:textColor="#ff282828"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/tv_nickname"
            android:src="@drawable/ic_user_woman" />

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/iv_sex"
            android:src="@drawable/center_ic_head_pressed" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nickname"
            android:layout_alignStart="@+id/tv_nickname"
            android:layout_marginTop="5dp"
            android:text="2018-09-27 09:50"
            android:textColor="#ffbdbdbd"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="228dp"
            android:background="#eeeeee" />

        <com.allen.library.SuperButton
            android:id="@+id/sb_to_back"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="27dp"
            android:text="给Ta回礼"
            android:textColor="#FF6161"
            android:textSize="14sp"
            app:sCornersRadius="14dp"
            app:sSolidColor="@android:color/transparent"
            app:sStrokeColor="#FF6161"
            app:sStrokeWidth="1dp" />

        <com.allen.library.SuperButton
            android:id="@+id/sb_send_msg"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_below="@+id/sb_to_back"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="27dp"
            android:text="发消息"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:sCornersRadius="14dp"
            app:sSolidColor="#FF6161"
            app:sStrokeColor="#FF6161"
            app:sStrokeWidth="1dp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:id="@+id/ll_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赠送礼物："
                android:textColor="#ff282828"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_gift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="礼物x20"
                android:textColor="#5415F9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="给你"
                android:textColor="#ff282828"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_gift"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价值："
                android:textColor="#ff282828"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="+15币"
                android:textColor="#5415F9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_coin"
            android:visibility="gone"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分"
                android:textColor="#ff282828"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="+15积分"
                android:textColor="#5415F9" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toStartOf="@+id/tv_gift_num" />

        <TextView
            android:id="@+id/tv_gift_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="×20"
            android:textColor="#282828"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0d4E05FF"
        android:padding="8dp"
        android:text="提示：线下所获得的虚拟礼物，均可选择兑换成线下真实物品或线上提现哦~"
        android:textColor="#ff5415f9"
        android:textSize="13sp" />

    <com.allen.library.SuperButton
        android:id="@+id/sb_recharge"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:text="去兑换"
        android:textColor="#ff5415f9"
        android:textSize="18sp"
        app:sCornersRadius="2dp"
        app:sSolidColor="@android:color/transparent"
        app:sStrokeColor="#4E05FF"
        app:sStrokeWidth="1dp" />

    <Button
        android:id="@+id/btn_cash"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/money_cash_btn"
        android:text="去提现"
        android:textColor="@color/white"
        android:layout_marginBottom="24dp"
        android:textSize="18sp" />

</LinearLayout>
