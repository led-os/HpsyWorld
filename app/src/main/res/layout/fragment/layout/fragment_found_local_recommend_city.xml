<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="14dp">

    <TextView
        android:id="@+id/tv_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="当前定位"
        android:textColor="#99282828"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_current"
        android:layout_marginTop="14dp"
        android:drawableLeft="@drawable/ic_tips_city"
        android:text="苏州"
        android:textColor="@color/balck_28"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/tv_lately"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_local"
        android:layout_marginTop="23dp"
        android:text="最近查询"
        android:textColor="#99282828"
        android:textSize="13sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_lately"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_below="@+id/tv_lately"
        android:layout_marginTop="17dp">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_hotcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_lately"
        android:layout_marginTop="17dp"
        android:text="热门城市 "
        android:textColor="#99282828"
        android:textSize="13sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_hotcity"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_below="@+id/tv_hotcity"
        android:layout_marginTop="17dp">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
