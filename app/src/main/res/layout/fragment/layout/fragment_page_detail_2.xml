<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="个性签名"
            android:textColor="@color/black_66"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="在芸芸众生的人海里,你敢否与世隔绝,独善其身,任周围的人们闹 腾,你却漠不关心,冷落,孤寂,像一朵花在荒凉的沙漠里,不愿向着微 风吐"
            android:textColor="@color/black_66"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="认证资料"
            android:textColor="@color/black_66"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_isPhoto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:src="@drawable/personal_icon_photo_not"/>

            <ImageView
                android:id="@+id/tv_isId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:src="@drawable/personal_icon_id_not" />

            <ImageView
                android:id="@+id/tv_isPhone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:src="@drawable/personal_icon_phone_not" />

            <ImageView
                android:id="@+id/tv_isHouse"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:src="@drawable/personal_icon_house_not" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:weightSum="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_isEdu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:src="@drawable/personal_icon_edu_not" />

            <ImageView
                android:id="@+id/tv_isCar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:src="@drawable/personal_icon_car_not" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="高级资料"
                    android:textColor="@color/black_66"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:text="年收入"
                android:textColor="#cc282828"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_income"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#cc282828"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:text="购房情况"
                    android:textColor="#cc282828"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_house"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#cc282828"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:text="购车情况"
                    android:textColor="#cc282828"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_car"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#cc282828"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:text="感情状况"
                    android:textColor="#cc282828"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_marry"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#cc282828"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:text="宗教信仰"
                    android:textColor="#cc282828"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_zong"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#cc282828"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:text="有无子女"
                    android:textColor="#cc282828"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_child"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#cc282828"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:text="职业"
                    android:textColor="#cc282828"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#cc282828"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:text="擅长"
                android:textColor="#cc282828"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_good_at"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="查看"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:text="对爱情的看法"
                android:textColor="#cc282828"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_about_love"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="查看"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:text="对性的看法"
                android:textColor="#cc282828"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_about_sex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="查看"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:text="最满意的部分"
                android:textColor="#cc282828"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="查看"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:text="最近活跃时间"
                android:textColor="#cc282828"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="查看"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="择偶标准"
            android:textColor="@color/black_66"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <com.kuwai.ysy.widget.shadow.TagFlowLayout
            android:id="@+id/tv_tag_zeou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"></com.kuwai.ysy.widget.shadow.TagFlowLayout>

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/ta_gift"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/ic_arrow_right"
            android:gravity="center_vertical"
            android:paddingRight="12dp"
            android:text="TA收到的礼物"
            android:textColor="@color/black_66"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <View style="@style/horizontal_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/ic_arrow_right"
            android:gravity="center_vertical"
            android:paddingRight="12dp"
            android:text="TA的足迹"
            android:textColor="@color/black_66"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            style="@style/horizontal_line"
            android:layout_marginLeft="30dp" />

        <com.kuwai.ysy.widget.shadow.TagFlowLayout
            android:id="@+id/tv_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"></com.kuwai.ysy.widget.shadow.TagFlowLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>