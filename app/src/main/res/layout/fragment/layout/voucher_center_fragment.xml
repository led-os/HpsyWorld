<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kuwai.ysy.widget.NavigationLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightColor="@color/theme"
        app:rightTxt="常见问题"
        app:title1="充值中心"></com.kuwai.ysy.widget.NavigationLayout>

    <com.allen.library.SuperTextView
        android:id="@+id/tv_current"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="1dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        app:sLeftTextColor="#282828"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="当前余额(桃花币)"
        app:sRightTextColor="#5415F9"
        app:sRightTextSize="20sp"
        app:sRightTextString="100" />

    <com.allen.library.SuperTextView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="15dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        app:sDividerLineColor="@color/transparent"
        app:sLeftTextColor="#282828"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="选择充值金额" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_voucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    </android.support.v7.widget.RecyclerView>


    <Button
        android:id="@+id/btn_cash"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="47dp"
        android:background="@drawable/money_cash_btn"
        android:text="立即充值"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

</LinearLayout>
