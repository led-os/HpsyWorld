<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kuwai.ysy.widget.NavigationLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightTxt="保存"
        app:rightColor="@color/theme"
        app:title1="修改手机号"></com.kuwai.ysy.widget.NavigationLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0d4E05FF"
        android:paddingStart="11dp"
        android:paddingEnd="15dp">

        <TextView
            android:layout_width="349dp"
            android:layout_height="34dp"
            android:text="更换手机后，下次登录可使用新手机号登录。当前手机号为：138****1111"
            android:textColor="#ff5415f9"
            android:textSize="14sp" />

    </LinearLayout>

    <com.allen.library.SuperTextView
        android:id="@+id/st_old_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        app:sCenterTextString="sdasfafagagag"
        app:sLeftTextColor="#282828"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="旧手机号" />

    <com.allen.library.SuperTextView
        android:id="@+id/st_new_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        app:sCenterTextString="sdasfafagagag"
        app:sLeftTextColor="#282828"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="旧手机号" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="验证码"
            android:textColor="#ff282828"
            android:textSize="16sp" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_vcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="获取验证码"
            android:textColor="#ff5415f9"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
