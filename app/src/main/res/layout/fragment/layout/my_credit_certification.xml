<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.kuwai.ysy.widget.NavigationLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightColor="@color/theme"
        app:rightTxt="实名作用？"
        app:title1="信用认证">

    </com.kuwai.ysy.widget.NavigationLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingStart="16dp"
        android:text="补全认证信息，让有品质的TA更容易找到你"
        android:textColor="#ff666666"
        android:textSize="14sp" />

    <View style="@style/horizontal_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="基本认证"
        android:textColor="#282828"
        android:textSize="16sp"
        android:textStyle="bold">

    </TextView>

    <View style="@style/horizontal_line" />

    <com.allen.library.SuperTextView
        android:id="@+id/st_headicon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:paddingStart="6dp"
        app:sLeftIconRes="@drawable/mine_icon_photo_sure"
        app:sLeftTextColor="#282828"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="真实照片认证"
        app:sRightTextColor="#ffbdbdbd"
        app:sRightTextSize="14sp"
        app:sRightTextString="已认证" />

    <com.allen.library.SuperTextView
        android:id="@+id/st_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="6dp"
        app:sLeftIconRes="@drawable/mine_icon_phone_not"
        app:sLeftTextColor="#282828"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="手机号码认证"
        app:sRightTextColor="#ffbdbdbd"
        app:sRightTextSize="14sp"
        app:sRightTextString="已认证" />


    <com.allen.library.SuperTextView
        android:id="@+id/tv_auth"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="6dp"
        app:sLeftTextColor="#282828"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="实名认证"
        app:sRightTextColor="#ff6161"
        app:sRightTextGravity="center"
        app:sRightTextSize="14sp"
        app:sRightTextString="去认证"
        app:sRightTvDrawableRight="@drawable/center_ic_list_enter" />

    <com.allen.library.SuperTextView
        android:id="@+id/st_edu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="6dp"
        app:sLeftTextColor="#282828"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="学历认证"
        app:sRightTextColor="#ff6161"
        app:sRightTextGravity="center"
        app:sRightTextSize="14sp"
        app:sRightTextString="去认证"
        app:sRightTvDrawableRight="@drawable/center_ic_list_enter" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="资产认证"
        android:textColor="#282828"
        android:textSize="16sp"
        android:textStyle="bold">
    </TextView>

    <View style="@style/horizontal_line" />

    <com.allen.library.SuperTextView
        android:id="@+id/st_house"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:paddingStart="6dp"
        app:sLeftTextColor="#282828"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="房产认证"
        app:sRightTextColor="#ff6161"
        app:sRightTextGravity="center"
        app:sRightTextSize="14sp"
        app:sRightTextString="去认证"
        app:sRightTvDrawableRight="@drawable/center_ic_list_enter" />

    <com.allen.library.SuperTextView
        android:id="@+id/st_car"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="6dp"
        app:sLeftTextColor="#282828"
        app:sLeftTextSize="16sp"
        app:sLeftTextString="车辆认证"
        app:sRightTextColor="#ff6161"
        app:sRightTextGravity="center"
        app:sRightTextSize="14sp"
        app:sRightTextString="去认证"
        app:sRightTvDrawableRight="@drawable/center_ic_list_enter" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="我们会对您的信息以严格的标准进行保护，未经您的授 权不会对任何第三方提供。"
        android:textColor="#ffbfbfbf"
        android:textSize="14sp" />

</LinearLayout>
