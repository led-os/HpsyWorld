<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kuwai.ysy.widget.NavigationLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title1="我的想问"></com.kuwai.ysy.widget.NavigationLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/center_problem_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="想问的问题"
            android:textColor="@color/balck_28"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="(最多设置三个哦)"
            android:textColor="@color/grey_bd"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/horizontal_line" />

    <com.allen.library.SuperButton
        android:id="@+id/btn_add_question"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:text="+ 点击添加问题"
        android:textColor="#ff7b7b7b"
        android:textSize="15sp"
        app:sCornersRadius="2dp"
        app:sSolidColor="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_select"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_list_select" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="不知道您如何看待异地恋的问题呢？"
            android:textColor="#ff875bf0"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_chat_nav_more" />
    </LinearLayout>

    <com.allen.library.SuperButton
        android:id="@+id/btn_add_answer"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:text="+ 点击添加我的回答"
        android:textColor="#ff7b7b7b"
        android:textSize="15sp"
        app:sCornersRadius="2dp"
        app:sSolidColor="@color/white" />
</LinearLayout>