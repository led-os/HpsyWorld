<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kuwai.ysy.widget.NavigationLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title1="提现到支付宝"></com.kuwai.ysy.widget.NavigationLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0d4E05FF"
        android:gravity="center"
        android:padding="8dp"
        android:text="暂时只支持支付宝提现，请填写真实信息。"
        android:textColor="#ff5415f9"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@android:color/white"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="提现金额"
            android:textColor="#ff282828"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_cash_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="21dp"
            android:layout_toStartOf="@+id/tv_all"
            android:background="@null"
            android:text="0.00"
            android:inputType="number|numberDecimal"
            android:textColor="#ff282828"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="全部提现"
            android:textColor="#ffff6161"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="支付宝姓名"
            android:textColor="#ff282828"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_zhi_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tv_all"
            android:layout_weight="1"
            android:singleLine="true"
            android:maxLength="14"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入您的支付宝真实姓名"
            android:textColor="#ff282828"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="支付宝账号"
            android:textColor="#ff282828"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_zhi_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tv_all"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:singleLine="true"
            android:hint="请输入您的支付宝真实账号"
            android:textColor="#ff282828"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_cash"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="47dp"
        android:background="@drawable/money_cash_btn"
        android:text="提现"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

</LinearLayout>
