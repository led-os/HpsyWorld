<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="14dp">

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/img_head"
        android:textColor="@color/balck_28"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_pick_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_nick"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tv_nick" />

    <TextView
        android:id="@+id/tv_time_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_nick"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/img_pick_type"
        android:textColor="@color/theme"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nick"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/img_head"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/gray_7b"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/img_sex"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_below="@id/tv_nick"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/tv_age" />


    <ImageView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_date_arrow_right" />

    <ImageView
        android:id="@+id/img_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_head"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_date_food" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_head"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/img_type"
        android:textColor="@color/gray_7b"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_head"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/tv_type"
        android:src="@drawable/ic_find_list_time" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_head"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/img_time"
        android:textColor="@color/gray_7b"
        android:textSize="14sp" />

    <com.allen.library.SuperButton
        android:id="@+id/sb_status"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/img_head"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_theme"
        app:sCornersRadius="24dp"
        app:sSolidColor="@color/white"
        app:sStrokeColor="@color/text_theme"
        app:sStrokeWidth="1dp" />

</RelativeLayout>
