<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/sl_color_white_2_background2">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_city"
        android:layout_width="120.0dip"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/rv_province" />

    <RelativeLayout
        android:id="@+id/line"
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/rv_city"
        android:background="@color/grey_bd"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_area"
        android:layout_width="120.0dip"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/line"/>

    <RelativeLayout
        android:id="@id/line2"
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/rv_area"
        android:background="@color/grey_bd" />
</RelativeLayout>