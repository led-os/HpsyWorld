<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/white">

    <com.allen.library.CircleImageView
        android:id="@+id/img_head"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/img_head"
        android:textColor="@color/balck_28"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/vip"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="18dp"
        android:visibility="gone"
        android:layout_toRightOf="@id/tv_nick"
        android:src="@drawable/ic_user_vip" />

    <ImageView
        android:id="@+id/iv_sex"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/vip" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nick"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/img_head"
        android:textColor="#6b6b6b"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="28dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dyn_dyn_ic_like_pre" />

    <View
        style="@style/horizontal_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
</RelativeLayout>
