<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.allen.library.CircleImageView
        android:id="@+id/comment_item_logo"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/beau_girl" />

    <TextView
        android:id="@+id/comment_item_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/comment_item_logo"
        android:text="张大贵"
        android:textColor="@color/balck_28"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/comment_item_userName"
        android:layout_toRightOf="@id/comment_item_userName"
        android:src="@drawable/ic_user_vip" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/comment_item_userName"
        android:layout_toRightOf="@id/vip"
        android:src="@drawable/ic_user_man" />

    <TextView
        android:id="@+id/comment_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_item_userName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/comment_item_logo"
        android:text="23小时前"
        android:textColor="#6b6b6b"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/comment_item_like"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="28dp"
        android:layout_alignBottom="@id/comment_item_time"
        android:scaleType="centerCrop"
        android:src="@drawable/dyn_dc_ic_like_pre" />

    <ImageView
        android:id="@+id/comment_item_ping"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="8dp"
        android:layout_alignBottom="@id/comment_item_time"
        android:layout_toLeftOf="@id/comment_item_like"
        android:scaleType="centerCrop"
        android:src="@drawable/dyn_dc_ic_message" />

    <TextView
        android:id="@+id/comment_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/comment_item_time"
        android:layout_below="@id/comment_item_time"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="14dp"
        android:text="有点爱丽丝梦游仙境的感觉"
        android:textColor="@color/balck_28"
        android:textSize="14sp" />

    <View
        style="@style/horizontal_line"
        android:layout_below="@id/comment_item_content"
        android:layout_alignLeft="@id/comment_item_time"
        android:layout_marginRight="20dp" />
</RelativeLayout>