<?xml version="1.0" encoding="utf-8"?>
<www.linwg.org.lib.LCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cornerRadius="4dp"
    app:elevation="14dp"
    app:shadowColor="@color/card_shadow"
    app:shadowFluidShape="linear"
    app:shadowSize="12dp"
    app:shadowStartAlpha="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="12dp"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_head"
            android:text="电影"
            android:textColor="#ff666666"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_name"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_name"
            android:layout_toLeftOf="@id/tv_star"
            android:text="惊奇队长"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:textColor="#ff666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="10dp"
            android:text="2019/03/16 19:00"
            android:textColor="#ff808080"
            android:textSize="12sp" />

        <com.allen.library.SuperButton
            android:id="@+id/tv_star"
            android:layout_width="68dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="等待中"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:sCornersRadius="2dp"
            app:sSolidColor="#9ad6ff" />

        <RelativeLayout
            android:id="@+id/succ_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_head"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:visibility="gone">

            <com.allen.library.CircleImageView
                android:id="@+id/mem_head"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/mem_head"
                android:text="伊利果粒多"
                android:textColor="#ff666666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/tv_nick"
                android:background="@drawable/bg_sex_round"
                android:drawableLeft="@drawable/home_icon_female"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="26"
                android:textColor="#ffffffff"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/mem_head"
                android:layout_alignLeft="@id/tv_nick"
                android:text="成功赴约"
                android:textColor="#ff808080"
                android:textSize="12sp" />
        </RelativeLayout>
            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去分享给好友 >>"
                android:textColor="#ff808080"
                android:visibility="gone"
                android:layout_below="@id/img_head"
                android:layout_marginLeft="70dp"
                android:textSize="14sp" />

        <com.kuwai.ysy.widget.PileLayout
            android:id="@+id/round_head"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/img_head">

        </com.kuwai.ysy.widget.PileLayout>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/img_head"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="10dp"
            android:text="12人应约"
            android:textColor="#ff666666"
            android:textSize="14sp" />

    </RelativeLayout>

</www.linwg.org.lib.LCardView>