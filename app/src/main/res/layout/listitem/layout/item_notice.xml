<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.kuwai.ysy.widget.TextImageView
        android:id="@+id/img_head"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:src="@drawable/ic_talk_list" />

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_head"
        android:text="您有一条新的物流消息"
        android:textColor="@color/balck_28"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:text="13:14"
        android:textColor="#ff969696"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/img_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_nick"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/tv_nick" />

    <ImageView
        android:id="@+id/img_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_nick"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/img_sex"
        android:src="@drawable/ic_user_vip"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nick"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/img_head"
        android:text="运单编号：284198471974917419"
        android:textColor="#ff969696"
        android:textSize="13sp" />

    <com.kuwai.ysy.widget.pageitem.RoundMessageView
        android:id="@+id/red_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"></com.kuwai.ysy.widget.pageitem.RoundMessageView>

    <View
        style="@style/horizontal_line"
        android:layout_below="@id/tv_sign"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/img_head" />
</RelativeLayout>