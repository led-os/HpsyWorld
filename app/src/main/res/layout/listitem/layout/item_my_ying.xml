<?xml version="1.0" encoding="utf-8"?>
<www.linwg.org.lib.LCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cornerRadius="4dp"
    app:elevation="14dp"
    app:shadowColor="@color/card_shadow"
    app:shadowFluidShape="linear"
    app:shadowSize="12dp"
    app:shadowStartAlpha="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.kuwai.ysy.widget.NiceImageView
            android:id="@+id/img_head"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="12dp"
            android:src="@drawable/icon"
            app:corner_radius="2dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_head"
            android:text="端庄的白昼"
            android:textColor="#ff666666"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignBottom="@id/tv_name"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/tv_name"
            android:background="@drawable/bg_sex_round"
            android:drawableLeft="@drawable/home_icon_female"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="26"
            android:textColor="#ffffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="6dp"
            android:text="2019/03/16 19:00"
            android:textColor="#ff808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            android:text="对方还未选择"
            android:textColor="#ffbfbfbf"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_succ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_pick" />

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="对方选中你啦"
                android:textColor="#ff666666"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_head"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_date_game_nor" />

            <TextView
                android:id="@+id/meet_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="游戏"
                android:textColor="#ff666666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="王者荣耀"
                android:singleLine="true"
                android:maxEms="6"
                android:textColor="#ff666666"
                android:textSize="14sp" />
        </LinearLayout>

        <com.allen.library.SuperButton
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_below="@id/img_head"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="等待中"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:sSolidColor="#9ad6ff" />

        <com.allen.library.SuperButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/img_head"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="取消应约"
            android:textColor="@color/black_66"
            android:textSize="10sp"
            android:textStyle="bold"
            app:sCornersRadius="20dp"
            app:sSolidColor="@color/white"
            app:sStrokeColor="#9ad6ff"
            app:sStrokeWidth="2dp" />

    </RelativeLayout>

</www.linwg.org.lib.LCardView>