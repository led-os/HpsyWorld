<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="14dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp">

        <com.kuwai.ysy.widget.NiceImageView
            android:id="@+id/img_pic"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:corner_radius="6dp" />

        <TextView
            android:id="@+id/tv_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_right_bottom"
            android:padding="4dp"
            android:text="收费"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/card"
        android:maxLines="2"
        android:textColor="@color/balck_28"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nick"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/card"
        android:maxLines="3"
        android:textColor="@color/gray_7b"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignBottom="@id/btn_state"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:text="人"
        android:textColor="@color/balck_28"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignBottom="@id/btn_state"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@id/tv_unit"
        android:gravity="center_vertical"
        android:textColor="#ff6161"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignBottom="@id/btn_state"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/tv_num"
        android:src="@drawable/ic_blind_people" />

    <com.allen.library.SuperButton
        android:id="@+id/btn_state"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/card"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/card"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:sCornersRadius="4dp" />
</RelativeLayout>
