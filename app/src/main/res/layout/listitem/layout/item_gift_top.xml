<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/radio_top"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true" />

    <com.allen.library.CircleImageView
        android:id="@+id/img_head"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/radio_top" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/img_head"
        android:text="风停停走走"
        android:textColor="#ff5415f9"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_name"
        android:text="赠送的礼物"
        android:layout_marginLeft="6dp"
        android:textColor="@color/balck_28"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ic_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_list_arrow_down" />

    <View style="@style/horizontal_line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>