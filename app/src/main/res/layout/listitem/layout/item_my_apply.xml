<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_my_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:padding="14dp">

    <android.support.v7.widget.CardView
        android:id="@+id/my_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <com.kuwai.ysy.widget.NiceImageView
            android:id="@+id/img_pic"
            android:layout_width="80dp"
            android:layout_height="102dp"
            android:scaleType="centerCrop"
            app:corner_radius="4dp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/my_card"
        android:maxLines="2"
        android:textColor="@color/balck_28"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_time_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_nick"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="2dp"
        android:textColor="@color/text_orange"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/my_card"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/my_card"
        android:textColor="@color/gray_7b"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_type"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/my_card"
        android:textColor="@color/gray_7b"
        android:textSize="12sp" />

</RelativeLayout>
