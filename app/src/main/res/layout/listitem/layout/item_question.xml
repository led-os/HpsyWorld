<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="12dp">

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_list_unselect" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_select"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/img_arrow"
        android:layout_toRightOf="@id/img_select"
        android:gravity="center_vertical"
        android:text="您相信一见钟情还是日久生情？"
        android:textColor="@color/balck_28" />

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_list_arrow_up" />

    <EditText
        android:id="@+id/et_question_answer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/img_select"
        android:layout_margin="12dp"
        android:background="@drawable/shape_question"
        android:gravity="left|top"
        android:hint="请输入您的回答"
        android:inputType="textMultiLine"
        android:maxLines="6"
        android:padding="10dp"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColor="@color/gray_7b"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_question_answer"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:text="6/100"
        android:textColor="@color/grey_bd" />

    <com.allen.library.SuperButton
        android:id="@+id/btn_send"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/et_question_answer"
        android:layout_marginRight="14dp"
        android:text="发送"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:sCornersRadius="18dp"
        app:sGradientEndColor="#bfb5ea"
        app:sGradientOrientation="LEFT_RIGHT"
        app:sGradientStartColor="#9a7df7"
        app:sGradientType="linear" />
       
</RelativeLayout>