<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <com.kuwai.ysy.widget.NiceImageView
        android:id="@+id/img_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/beau_girl"
        app:corner_radius="4dp" />

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_head"
        android:text="赵丽颖"
        android:textColor="@color/balck_28"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nick"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/img_head">

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28岁"
            android:textColor="@color/balck_28"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_sex"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/tv_sign"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/tv_sign"
            android:src="@drawable/ic_user_woman" />
    </LinearLayout>


    <com.allen.library.SuperButton
        android:id="@+id/btn_think"
        android:layout_width="76dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:text="再考虑"
        android:visibility="gone"
        android:textColor="@color/balck_28"
        android:textSize="14sp"
        app:sCornersRadius="24dp"
        app:sSolidColor="@color/white"
        app:sStrokeColor="@color/grey_bd"
        app:sStrokeWidth="1px" />

    <com.allen.library.SuperButton
        android:id="@+id/btn_agree"
        android:layout_width="76dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:text="同意"
        android:textColor="@color/balck_28"
        android:textSize="14sp"
        app:sCornersRadius="24dp"
        app:sSolidColor="@color/white"
        app:sStrokeColor="@color/grey_bd"
        app:sStrokeWidth="1px" />
</RelativeLayout>
