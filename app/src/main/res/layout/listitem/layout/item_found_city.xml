<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_8"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="15dp"
    app:cardElevation="@dimen/dp_8">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl"
        android:layout_width="134dp"
        android:layout_height="170dp">

        <ImageView
            android:id="@+id/iv_userpic"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="@color/color_gray" />

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="82dp"
            android:src="@drawable/ic_user_man" />

        <com.allen.library.SuperButton
            android:id="@+id/sb_distance"
            android:layout_width="83dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/iv_sex"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="6dp"
            android:background="#4e05ff"
            android:text="距你14.0km"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:sCornersRadius="2dp" />

        <com.allen.library.SuperButton
            android:id="@+id/tv_theme"
            android:layout_width="37dp"
            android:layout_height="15dp"
            android:layout_below="@+id/iv_userpic"
            android:layout_marginStart="9dp"
            android:layout_marginTop="8dp"
            android:text="旅游"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:sCornersRadius="2dp"
            app:sSolidColor="#6601aef0" />

        <com.allen.library.SuperButton
            android:id="@+id/sb_pay"
            android:layout_width="37dp"
            android:layout_height="15dp"
            android:layout_below="@+id/iv_userpic"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/tv_theme"
            android:background="@color/blueLight"
            android:text="我请客"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:sCornersRadius="2dp"
            app:sSolidColor="#6601aef0" />

        <com.allen.library.SuperButton
            android:id="@+id/sb_yue"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="9dp"
            android:text="应约"
            android:textColor="@color/white"
            app:sCornersRadius="@dimen/dp_12"
            app:sGradientEndColor="#9c7cff"
            app:sGradientOrientation="LEFT_RIGHT"
            app:sGradientStartColor="#7644fa"
            app:sUseSelector="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>



