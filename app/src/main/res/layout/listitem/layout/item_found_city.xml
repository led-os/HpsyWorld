<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/top_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/dp_4">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rl"
            android:layout_width="120dp"
            android:layout_height="146dp">

            <com.kuwai.ysy.widget.NiceImageView
                android:id="@+id/iv_userpic"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:scaleType="centerCrop"
                app:corner_top_left_radius="10dp"
                app:corner_top_right_radius="10dp" />

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_below="@id/iv_userpic"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/home_icon_female" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_sex"
                android:layout_toRightOf="@id/iv_sex"
                android:text="端庄的白昼"
                android:layout_marginLeft="6dp"
                android:textColor="#ff808080"
                android:textSize="10sp" />

            <com.allen.library.SuperButton
                android:id="@+id/tv_theme"
                android:layout_width="37dp"
                android:layout_height="15dp"
                android:layout_below="@+id/iv_sex"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:text="旅游"
                android:textColor="@color/white"
                android:textSize="11sp"
                app:sCornersRadius="2dp"
                app:sSolidColor="#6601aef0" />

            <com.allen.library.SuperButton
                android:id="@+id/sb_pay"
                android:layout_width="37dp"
                android:layout_height="15dp"
                android:layout_below="@+id/iv_sex"
                android:layout_marginStart="3dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/tv_theme"
                android:text="我请客"
                android:textColor="@color/white"
                android:textSize="11sp"
                app:sCornersRadius="2dp"
                app:sSolidColor="#6E9BFF" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <com.allen.library.SuperButton
        android:id="@+id/sb_yue"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_below="@id/top_lay"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="-12dp"
        android:elevation="4dp"
        android:text="应约"
        android:textColor="@color/white"
        app:sCornersRadius="@dimen/dp_12"
        app:sGradientEndColor="#A9E2FF"
        app:sGradientOrientation="LEFT_RIGHT"
        app:sGradientStartColor="#79C5FF"
        app:sUseSelector="true" />
</RelativeLayout>



