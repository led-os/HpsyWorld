<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@color/white">

    <com.allen.library.CircleImageView
        android:id="@+id/img_head"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/center_img_user_default" />

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/img_head"
        android:text="张大贵"
        android:gravity="bottom"
        android:textColor="@color/balck_28"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignBottom="@id/tv_nick"
        android:layout_toRightOf="@id/tv_nick"
        android:layout_marginLeft="6dp"
        android:visibility="gone"
        android:src="@drawable/ic_user_vip" />

    <ImageView
        android:id="@+id/iv_sex"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignBottom="@id/tv_nick"
        android:layout_toRightOf="@id/iv_vip"
        android:layout_marginLeft="6dp"
        android:src="@drawable/ic_user_man" />

    <ImageView
        android:id="@+id/img_zan"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/tv_nick"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/img_head"
        android:scaleType="centerCrop"
        android:src="@drawable/dyn_dyn_ic_like_pre" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_zan"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/img_head"
        android:text="23小时前"
        android:textColor="#6b6b6b"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/img_gift"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="28dp"
        android:scaleType="centerCrop" />

    <View
        style="@style/horizontal_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
</RelativeLayout>